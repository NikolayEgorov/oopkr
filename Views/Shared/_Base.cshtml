<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <title>@ViewData["Title"]</title>

        <!-- Favicon-->
        <link rel="icon" href="favicon.ico" type="image/x-icon">

        <!-- Plugins Core Css -->
        <link href="/assets/css/app.min.css" rel="stylesheet">

        <!-- Custom Css -->
        <link href="/assets/css/style.css" rel="stylesheet" />
        <link href="/assets/css/styles/theme-white.css" rel="stylesheet" />

        @RenderSection("CustomStyles", required: false)
    </head>

    <body class="light">
        @RenderSection("Preloader", required: false)

        <!-- Overlay For Sidebars -->
        <div class="overlay"></div>
        <!-- #END# Overlay For Sidebars -->

        @RenderSection("TopNavbar", required: false)

        <div>
            @RenderSection("LeftSidebar", required: false)
            @RenderSection("RightSidebar", required: false)
        </div>

        <section class="content">
            <div class="container-fluid">
                <div class="block-header">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <ul class="breadcrumb breadcrumb-style ">
                                @RenderSection("Breadcrumb")
                            </ul>
                        </div>
                    </div>
                </div>
                
                @RenderBody()
            </div>
        </section>

        <!-- Plugins Js -->
        <script src="/assets/js/app.min.js"></script>
        @RenderSection("PluginsScripts", required: false)

        <!-- Custom Js -->
        <script src="/assets/js/admin.js"></script>
        @RenderSection("CustomScripts", required: false)
    </body>
</html>