@using Models;
@using ViewModels.Users;
@model IndexViewModels;

@{
    Layout = "_Layout";
    ViewData["title"] = "Оператори системи";
    ViewData["layoutContainerClass"] = "users-index";
}

@section Body {
<!-- Table -->
<div class="col-12">
    <div class="card">
        <div class="header">
            <h2><strong>@ViewData["title"]</strong></h2>

            <ul class="header-dropdown m-r--5">
                <li class="dropdown">
                    <a href="#" onClick="return false;" class="dropdown-toggle" data-toggle="dropdown"
                        role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="material-icons">more_vert</i>
                    </a>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="/users/create">Додати</a>
                        </li>
                        @* <li>
                            <a href="#" onClick="return false;">Another action</a>
                        </li>
                        <li>
                            <a href="#" onClick="return false;">Something else here</a>
                        </li> *@
                    </ul>
                </li>
            </ul>
        </div>

        <div class="tableBody">
            <div class="table-responsive">
                <table class="table table-hover dashboard-task-infos">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Прізвище</th>
                            <th>Ім'я</th>
                            <th>Статус</th>
                            <th>Дії</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(User user in Model.users){
                            <tr>
                                <td class="table-img">
                                    <img src="/assets/images/user/user1.jpg" alt="">
                                </td>
                                <td>@user.email</td>
                                <td>@user.surname</td>
                                <td>@user.name</td>
                                <td><span class="label bg-green shadow-style">Активний</span></td>
                                <td>
                                    <button class="btn tblActnBtn" onclick="location.href = '/users/update/@user.id'">
                                        <i class="material-icons">mode_edit</i>
                                    </button>
                                    <button class="btn tblActnBtn" onclick="document.getElementById('delete-user-form-@user.id').submit()">
                                        <i class="material-icons">delete</i>
                                    </button>
                                    <form id="delete-user-form-@user.id" action="/users/delete/@user.id" method="post"></form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Table -->
}